<resources>
    <!-- Base application theme. -->
    <style name="Theme.MeroSim" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary700</item>
        <item name="colorPrimaryDark">@color/colorPrimary900</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimary200</item>

        <item name="android:colorBackground">@color/white200</item>
        <item name="colorOnBackground">@color/black900</item>

        <item name="colorSurface">@color/white300</item>
        <item name="colorOnSurface">@color/black900</item>

        <item name="colorError">@color/colorRed900</item>
        <item name="colorOnError">@color/white50</item>

        <item name="colorOnPrimary">@color/white50</item>
        <item name="colorOnSecondary">@color/white50</item>

        <item name="android:textViewStyle">@style/Widget.MeroSim.TextView</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MeroSim.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MeroSim.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MeroSim.LargeComponent
        </item>
    </style>

    <style name="Widget.MeroSim.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
    </style>

    <style name="ThemeOverlay.MeroSim.CardView" parent="">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/card_bg</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.MeroSim.TextView.Clickable" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Theme.MeroSim.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MeroSim.Sim">
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.OutlinedButton
        </item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
    </style>

    <style name="Theme.MeroSim.Sim.Namaste">
        <item name="colorPrimary">@color/color_ntc_light</item>
        <item name="colorPrimaryDark">@color/color_ntc</item>
        <item name="colorAccent">@color/color_ntc_tint</item>
    </style>

    <style name="Theme.MeroSim.Sim.Ncell">
        <item name="colorPrimary">@color/color_ncell</item>
        <item name="colorPrimaryDark">@color/color_ncell_dark</item>
        <item name="colorAccent">@color/color_ncell_accent</item>
    </style>

    <style name="Theme.MeroSim.Sim.SmartCell">
        <item name="colorPrimary">@color/color_smart</item>
        <item name="colorPrimaryDark">@color/color_smart_dark</item>
        <item name="colorAccent">@color/color_smart_accent</item>
    </style>

    <style name="Theme.MeroSim.Splash" parent="Theme.MeroSim.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.MeroSim.CircularShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.MeroSim.RightCurvedShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>

    <style name="Theme.MeroSim.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.MeroSim.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

</resources>