<resources>

    <style name="Theme.MeroSim" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary200</item>
        <item name="colorPrimaryDark">?colorSurface</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/black900</item>
        <item name="colorOnBackground">@color/white300</item>

        <item name="colorSurface">@color/recommended_dark_surface</item>
        <item name="colorOnSurface">@color/white300</item>

        <item name="colorError">@color/colorChestNutRose</item>
        <item name="colorOnError">@color/white300</item>

        <item name="colorOnPrimary">@color/black900</item>
        <item name="colorOnSecondary">@color/black900</item>

        <item name="android:textViewStyle">@style/Widget.MeroSim.TextView</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MeroSim.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MeroSim.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MeroSim.LargeComponent
        </item>
    </style>

    <style name="Theme.MeroSim.Namaste">
        <item name="colorPrimary">@color/color_ntc_200</item>
        <!--        <item name="colorPrimaryDark">@color/color_ntc</item>-->
        <item name="colorAccent">@color/color_ntc_tint</item>
    </style>

    <style name="Theme.MeroSim.Ncell">
        <item name="colorPrimary">@color/color_ncell_200</item>
        <!--        <item name="colorPrimaryDark">@color/color_ncell_dark</item>-->
        <item name="colorAccent">@color/color_ncell_accent</item>
    </style>

    <style name="Theme.MeroSim.SmartCell">
        <item name="colorPrimary">@color/color_smart_200</item>
        <!--        <item name="colorPrimaryDark">@color/color_smart_dark</item>-->
        <item name="colorAccent">@color/color_smart_accent</item>
    </style>

    <style name="Theme.MeroSim.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>